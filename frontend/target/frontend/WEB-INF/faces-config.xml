<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <name>primefaces_icarus</name>       
   
    <component>
        <component-type>org.primefaces.component.IcarusMenu</component-type>
        <component-class>org.primefaces.icarus.component.menu.IcarusMenu</component-class>
    </component>    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.IcarusMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.icarus.component.menu.IcarusMenuRenderer</renderer-class>
        </renderer>
    </render-kit>    
    <application>        
        <locale-config>
            <default-locale>en</default-locale>          
        </locale-config>    
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>        
        </resource-bundle>         
        <resource-bundle>
            <base-name>access</base-name>
            <var>accessProp</var>
        </resource-bundle>
        <message-bundle>
            messages
        </message-bundle>      
    </application>    
    <navigation-rule>
        <from-view-id>*</from-view-id>        
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/pages/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>dashboard</from-outcome>
            <to-view-id>/pages/dashboard.xhtml</to-view-id>
            <redirect/>
        </navigation-case>               
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/pages/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>         
           <navigation-case>
            <from-outcome>patientlist</from-outcome>
            <to-view-id>/pages/registration/list.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
        <navigation-case>
            <from-outcome>activationlink</from-outcome>
            <to-view-id>/pages/activationlink.xhtml</to-view-id>
            <redirect/>
        </navigation-case>    
        <navigation-case>
            <from-outcome>nouser</from-outcome>
            <to-view-id>/pages/nouser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>nouser</from-outcome>
            <to-view-id>/pages/nouser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>          
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
            <redirect/>
        </navigation-case>          
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>                
    </navigation-rule>    
    
</faces-config>